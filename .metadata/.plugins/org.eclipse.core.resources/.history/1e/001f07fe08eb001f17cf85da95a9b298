package com.organ.donation.service;

import com.organ.donation.model.Donor;
import com.organ.donation.repository.DonorRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import java.util.List;
import java.util.Optional;

@Service
public class DonorService {

    @Autowired
    private DonorRepository donorRepository;

    public String postDonation(Donor donor) {
        donor.setStatus("Pending");
        donorRepository.save(donor);
        return "Donation request submitted!";
    }

    public String requestVerification(Long donorId) {
        Optional<Donor> donor = donorRepository.findById(donorId);
        if (donor.isPresent()) {
            donor.get().setVerificationStatus("Under Review");
            donorRepository.save(donor.get());
            return "Verification requested!";
        }
        return "Donor not found!";
    }

    public List<Donor> getAllDonors() {
        return donorRepository.findAll();
    }
}
